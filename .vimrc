syntax on
set number
set relativenumber
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set autoindent
set nobackup
set nowritebackup
set noswapfile
set cursorline
set laststatus=2
set mouse=a
set incsearch
set hlsearch
set nowrap
set scrolloff=8
set signcolumn=yes
set isfname+=@-@
set updatetime=50
set colorcolumn=80
@REM highlight Normal ctermfg=white ctermbg=16
@REM highlight Comment ctermfg=lightblue ctermbg=16
@REM highlight Constant ctermfg=lightyellow ctermbg=16
@REM highlight Identifier ctermfg=lightcyan ctermbg=16
@REM highlight Statement ctermfg=lightmagenta ctermbg=16
@REM highlight PreProc ctermfg=lightgreen ctermbg=16
@REM highlight Type ctermfg=lightred ctermbg=16
@REM highlight Special ctermfg=lightmagenta ctermbg=16
@REM highlight Underlined ctermfg=white ctermbg=16
@REM highlight CursorLine cterm=NONE ctermbg=234
@REM highlight LineNr ctermfg=240
@REM highlight CursorLineNr ctermfg=250
